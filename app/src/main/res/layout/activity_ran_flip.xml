        android:id="@+id/btn_play"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/orange_back"
        android:text="@string/play_audio"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:autoSizeMinTextSize="17sp"
        app:autoSizeStepGranularity="20sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_conform"
        app:layout_constraintStart_toEndOf="@+id/button_recording"
        app:layout_constraintTop_toTopOf="@+id/confirm" />

