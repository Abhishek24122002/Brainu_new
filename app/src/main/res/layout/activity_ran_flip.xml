    <Button
        android:id="@+id/confirm"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/vc_start_btn_red"
        android:text="@string/press_here"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:autoSizeMinTextSize="20sp"
        app:autoSizeStepGranularity="20sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_conform"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="58dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/green_back"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:autoSizeMinTextSize="17sp"
        app:autoSizeStepGranularity="22sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
